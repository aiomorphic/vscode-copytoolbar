{
    "name": "fastpaste",
    "displayName": "FastPaste",
    "description": "The Fastest Way to Copy and Paste to ChatGPT or Claude",
    "version": "1.0.4",
    "publisher": "Aiomorphic",
    "icon": "resources/fastpaste-icon.png",
    "engines": {
      "vscode": "^1.82.0"
    },
    "categories": [
      "AI",
      "Programming Languages",
      "Snippets"
    ],
    "activationEvents": [
      "onStartupFinished"
    ],
    "main": "./src/extension.js",
    "contributes": {
      "configuration": {
        "title": "FastPaste",
        "properties": {
          "FastPaste.buttonConfig": {
            "type": "array",
            "description": "Configuration for toolbar buttons"
          },
          "FastPaste.showNotifications": {
            "type": "boolean",
            "default": true,
            "description": "Show toast notifications when copying content"
          }
        }
      },
      "commands": [
            {
                "command": "fastPaste.copyFilePathAndContent",
                "title": "Copy File Path and Content",
                "icon": "$(copy)"
            },
            {
                "command": "fastPaste.copyCurrentFolderPathAndContent",
                "title": "Copy Folder Content",
                "icon": "$(file-submodule)"
            },
            {
                "command": "fastPaste.copyProjectStructureAST",
                "title": "Copy Project Structure",
                "icon": "$(symbol-struct)"
            },
            {
                "command": "fastPaste.refreshToolbar",
                "title": "Refresh FastPaste Toolbar"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "fastPaste.copyFilePathAndContent",
                    "group": "navigation"
                },
                {
                    "command": "fastPaste.copyCurrentFolderPathAndContent",
                    "group": "navigation"
                },
                {
                    "command": "fastPaste.copyProjectStructureAST",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "fastPaste.copyFilePathAndContent",
                    "when": "resourceLangId",
                    "group": "copy"
                }
            ]
        }
    },
    "keybindings": [
        {
            "command": "fastPaste.copyCurrentFilePathAndContent",
            "key": "ctrl+alt+c",
            "when": "editorTextFocus"
        },
        {
            "command": "fastPaste.copyOpenTabsPathAndContent",
            "key": "ctrl+alt+a",
            "when": "editorTextFocus"
        },
        {
            "command": "fastPaste.copyCurrentFolderPathAndContent",
            "key": "ctrl+alt+f",
            "when": "editorTextFocus"
        },
        {
            "command": "fastPaste.copyProjectStructureAST",
            "key": "ctrl+alt+s",
            "when": "editorTextFocus"
        }
    ],
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.82.0",
        "chai": "^5.1.1",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.1",
        "glob": "^7.1.7",
        "inquirer": "^10.1.8",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vsce": "^2.15.0",
        "vscode": "^1.1.37",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "ignore": "^5.2.0"
    },
    "extensionKind": [
        "workspace",
        "ui"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/aiomorphic/vscode-fastpaste.git"
    }
}